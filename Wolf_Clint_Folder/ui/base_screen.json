{
  "namespace": "wolf_base",

  "wolf_background": {
    "type": "panel",
    /* 1. CRITICAL: This tells the game to hide the 3D world/Panorama */
    "is_opaque": true, 
    "controls": [
      {
        "bg_image": {
          "type": "image",
          "texture": "textures/ui/background",
          "size": [ "100%", "100%" ], 
          "anchor_from": "center",
          "anchor_to": "center",
          /* 2. FIXED: Moving background to a lower layer */
          "layer": 1
        }
      },
      {
        "cyber_tint": {
          "type": "image",
          "texture": "textures/ui/white",
          "color": "$wolf_main_bg_color", 
          "alpha": 0.4, 
          "size": [ "100%", "100%" ],
          "layer": 2
        }
      },
      {
        "content_layer": {
          "type": "panel",
          "layer": 10,
          "controls": [
            { "main_content@$middle_content": { } }
          ]
        }
      }
    ]
  }
}