{
  "namespace": "wolf_crafting",

  "quick_craft_button@common_buttons.wolf_standard_button": {
    "size": [ "20px", "20px" ],
    "$button_text": "§l»", 
    "$pressed_button_name": "button.crafting_output_all", 
    "anchor_from": "top_right",
    "anchor_to": "top_right",
    "offset": [ "-5px", "5px" ],
    "layer": 20,
    "bindings": [
      {
        "binding_name": "#is_crafting_possible",
        "binding_name_override": "#visible"
      }
    ]
  },

  "crafting_panel": {
    "type": "panel",
    "controls": [
      {
        "content@common_containers.crafting_grid": {
          "controls": [
            { "quick_craft@wolf_crafting.quick_craft_button": { } }
          ]
        }
      }
    ]
  },

  "main_control@wolf_base.wolf_background": {
    "is_opaque": true, 
    "layer": 1,
    "$middle_content": "wolf_crafting.crafting_panel",
    "$screen_animations": [],
    "$container_title_color": "$wolf_accent_color",
    "$view_distance_tier": 0
  }
}
