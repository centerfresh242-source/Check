{
  "namespace": "pause",

  "pause_screen_slide_animation": {
    "anim_type": "offset",
    "easing": "out_back",
    "duration": 0.3,
    "from": [ "-100%x", "0px" ],
    "to": [ "0px", "0px" ],
    "play_event": "screen.on_open"
  },

  "pause_screen_content": {
    "type": "panel",
    "controls": [
      {
        "sliding_panel": {
          "type": "panel",
          "size": [ "200px", "100%" ], // % is okay for height!
          "anchor_from": "top_left",
          "anchor_to": "top_left",
          "anims": [ "@pause.pause_screen_slide_animation" ],
          "controls": [
            {
              "background": {
                "type": "image",
                "texture": "textures/ui/pause_background",
                "size": [ "100%", "100%" ],
                /* This keeps the corners from stretching */
                "renderer": "gradient_mask", 
                "nine_slice_size": [ "10px", "10px", "10px", "10px" ], 
                "layer": 1
              }
            },
            {
              "button_list": {
                "type": "stack_panel",
                "size": [ "180px", "100%" ],
                "offset": [ "10px", "10px" ],
                "layer": 2,
                "controls": [
                  {
                    "resume_button": {
                      "type": "panel",
                      "size": [ "100%", "25px" ], // Mix of % and px is fine
                      "controls": [
                        {
                          "btn@common_buttons.wolf_standard_button": {
                            "$button_text": "menu.resume",
                            "$button_icon_texture": "textures/ui/resume_icon",
                            "$pressed_button_name": "button.menu_resume"
                          }
                        }
                      ]
                    }
                  }
                ]
              }
            }
          ]
        }
      }
    ]
  },

  "main_control": {
    "type": "panel",
    "layer": 10,
    "controls": [
      { "pause_content@pause.pause_screen_content": {} }
    ],
    "$screen_animations": [],
    "background_alpha": 0.5
  }
}